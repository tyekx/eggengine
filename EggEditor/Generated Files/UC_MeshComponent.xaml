<UserControl
    x:Class="EggEditor.UC_MeshComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EggEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="295">

    <Grid Width="295" Height="100" Background="#FFA6CAEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="#FF004178" Grid.Row="0">
            <TextBlock Text="MeshComponent" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" FontSize="16"></TextBlock>
        </StackPanel>
        <TextBlock Text="Shaded Mesh:" Grid.Row="1" VerticalAlignment="Top" Foreground="Black" Padding="5,0,5,0" Margin="0,6,0,0"></TextBlock>
        <TextBox x:ConnectionId='2' x:Name="meshRef" Height="30" Width="280" AllowDrop="True" Grid.Row="2"                                                                   Text="{Binding AssetName}" />

    </Grid>
</UserControl>

